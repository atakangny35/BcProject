
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Simple Sidebar - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/web/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/web/css/simple-sidebar.css" rel="stylesheet">

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading"><a href="/Admin/Index"><img src="~/web/images/Footer.jpeg" class="img-fluid" alt="Responsive image" width="210"></a> </div>
            <div class="list-group list-group-flush">
                <a href="/Admin/Project" class="list-group-item list-group-item-action bg-light"><i class="fas fa-tasks" style="color:black"></i>Projeler</a>
                <a href="/Pictures/Ekle" class="list-group-item list-group-item-action bg-light"><i class="fas fa-camera" style="color:black"></i>Fotoğraf ekle</a>
                <a href="/Admin/AdminGuncelle" class="list-group-item list-group-item-action bg-light"><i class="fas fa-user" style="color:black"></i>Profilim</a>
                <a href="/Login/LogOut" class="list-group-item list-group-item-action bg-light"><i class="fas fa-sign-out-alt" style="color:black"></i>Çıkış Yap</a>

            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Menü </button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="https://kit.fontawesome.com/44cd8cba74.js" crossorigin="anonymous"></script>
    <script src="~/web/js/bootstrap.bundle.min.js"></script>

    <script src="~/web/Jqueary/jquery.min.js"></script>
    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });</script>

</body>

</html>
