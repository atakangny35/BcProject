@using BcProject.Models
@model IEnumerable<Works> 
@{
    ViewBag.Title = "Referance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-w3ls-bottom py-5" id="part">
    <div class="container-fluid py-lg-5 inner-sec-w3ls">
        <div class="header-w3layouts text-center mb-5">
            <h3 class="title-w3pvt mb-3"> Referanslar</h3>
            <p class="sub-para"> "Referanslar güvencemizdir", Sözüyle yola çıkarak Daha önce tamamlamış olduğumuz işlerden birkaçını görebilirsiniz  </p>
        </div>
        <div class="row part-grids">
            @foreach (var item in Model)
            {


            <div class="col-lg-4 partgrid1">
                <a href="/Gallery/index/@item.Id">
                   
                    <img src="@item.MenuPicture" alt="part image" class="img-fluid">
                    <h4 class="mt-4">@item.Title</h4>
                    <p class="mt-3">@item.Description </p>
                </a>
            </div>

            }

        </div>
    </div>
</section>

